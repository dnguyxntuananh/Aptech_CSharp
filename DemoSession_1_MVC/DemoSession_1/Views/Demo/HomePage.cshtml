           <h3 style="color:red">Products Table</h3>
           <table border="2">
               <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Photo</th>
                    <th>Created</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
               </tr>
               @foreach(var p in pros){
               <tr>
                   <td>@p.Id</td>
